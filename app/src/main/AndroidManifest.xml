<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplytask">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ManagerSubjectOverview"
            android:parentActivityName=".MainActivity"
            android:exported="false"/>

        <activity android:name=".ManagerSubjectView"
            android:parentActivityName=".ManagerSubjectOverview"
            android:exported="false"/>

        <activity android:name=".ManagerClassOverview"
            android:parentActivityName=".ManagerSubjectView"
            android:exported="false"/>

        <activity android:name=".SubjectOverview"
            android:parentActivityName=".MainActivity"
            android:exported="false">

        </activity>

        <activity android:name=".SubjectTasks"
            android:parentActivityName=".SubjectOverview"
            android:exported="false">

        </activity>

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>