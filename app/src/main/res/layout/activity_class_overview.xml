<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171560"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar10"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#f2b55e"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="#f2b55e"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simplyTask"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/audiowide"
        android:text="Simply Task"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <TextView
        android:id="@+id/simplyTask2"
        android:layout_width="121dp"
        android:layout_height="69dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/audiowide"
        android:text="☆★☆"
        android:textColor="@android:color/background_light"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <EditText
        android:id="@+id/name"
        android:layout_width="99dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:inputType="textPersonName"
        android:text="Amy N"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar2"
        app:layout_constraintEnd_toStartOf="@+id/imageView" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="63dp"
        android:layout_height="22dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:inputType="textPersonName"
        android:text="Hello!"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="@+id/simplyTask" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="71dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hello"
        app:layout_constraintVertical_bias="0.9"
        tools:srcCompat="@tools:sample/avatars" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="Homework"
                android:textColor="#BEFFFFFF"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/percentage"
                android:max="@android:integer/config_longAnimTime"
                android:padding="5dp"
                android:progress="@android:integer/config_shortAnimTime" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="259dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Research Daily Calories"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="#171560">

            <EditText
                android:id="@+id/editText5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Patrick A"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="patty@nosehair.com.au"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <EditText
                android:id="@+id/editText13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="John S"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="jsmith10@gmail.com"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <EditText
                android:id="@+id/editText15"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Amy N"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="amyisAwesome@cool.com"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/mySubjects3"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:inputType="textPersonName"
        android:text="Workers"
        android:textColor="#BCFFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="@font/audiowide"
        android:text="+ Add Worker"
        android:textColor="#171560"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/mySubjects2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:inputType="textPersonName"
        android:text="Classroom Overview:"
        android:textColor="#BCFFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectName" />

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySubjects2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="#171560">

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="Assignments"
                android:textColor="#BEFFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Hard?"
                android:textColor="#BEFFFFFF" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/starr"
                android:max="100"
                android:padding="5dp"
                android:progress="75"
                android:progressBackgroundTint="@color/colorPrimary"
                android:progressDrawable="@android:color/holo_green_light"
                android:progressTint="@android:color/primary_text_dark"
                android:requiresFadingEdge="horizontal|vertical" />

            <EditText
                android:id="@+id/editText20"
                android:layout_width="237dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Count Mr Allison's nose hairs"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="70"
                android:progressBackgroundTint="#FF0000"
                android:progressTint="#4CAF50"
                android:scaleY="2.5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#171560">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="@android:style/Widget.Material.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/percentagee"
                android:padding="5dp"
                android:progress="30"
                android:progressBackgroundTint="#801717"
                android:progressBackgroundTintMode="multiply"
                android:progressDrawable="@color/colorPrimary"
                android:progressTint="#F40D0D"
                android:progressTintMode="multiply" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/audiowide"
                android:inputType="textPersonName"
                android:text="Calculate results"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="30"
                android:progressBackgroundTint="#FF0000"
                android:progressTint="#4CAF50"
                android:scaleY="2.5" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:inputType="textPersonName"
        android:text="Maths"
        android:textAlignment="textEnd"
        android:textColor="#f2b55e"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

</androidx.constraintlayout.widget.ConstraintLayout>


