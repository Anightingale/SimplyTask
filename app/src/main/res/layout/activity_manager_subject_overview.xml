<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171560"
    tools:context=".ManagerSubjectOverview">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/lightGrey"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@android:color/background_light"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/miniToolbar"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="#f2b55e"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/mySubjects"
            android:layout_width="371dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Manager Mode"
            android:textColor="#BCFFFFFF"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miniToolbar" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Hello!"
            android:textColor="#f2b55e"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintEnd_toEndOf="@+id/simplyTask" />

        <TextView
            android:id="@+id/simplyTask"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/audiowide"
            android:text="Simply Task"
            android:textColor="#171560"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <TextView
            android:id="@+id/stars"
            android:layout_width="122dp"
            android:layout_height="66dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/audiowide"
            android:text="☆★☆"
            android:textColor="#171560"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hello"
            app:layout_constraintVertical_bias="0.9"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/name"
            android:layout_width="99dp"
            android:layout_height="52dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Amy N"
            android:textColor="#171560"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />

        <Button
            android:id="@+id/addSubject"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@android:color/background_light"
            android:fontFamily="@font/audiowide"
            android:text=" + Add New Subject"
            android:textAlignment="textEnd"
            android:textColor="#171560"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/mySubjects" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar13"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:background="#f2b55e"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/mySubjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="34dp"
            android:layout_height="29dp"
            android:background="@drawable/dropdownn"
            android:backgroundTint="@color/white"
            android:entries="@array/users"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar13"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/toolbar13"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/audiowide"
        android:text="Manager"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar13"
        app:layout_constraintEnd_toEndOf="@+id/miniToolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar13" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar8"
            app:srcCompat="@mipmap/logo_round" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addSubject">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#7cd1cd"
                android:fontFamily="@font/audiowide"
                android:onClick="gotToSubject"
                android:text="English"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#e682a9"
                android:fontFamily="@font/audiowide"
                android:onClick="gotToSubject"
                android:text="Music"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="#99a2de"
                android:fontFamily="@font/audiowide"
                android:onClick="gotToSubject"
                android:text="Personal"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
