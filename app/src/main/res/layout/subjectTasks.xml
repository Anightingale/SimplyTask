<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:background="#4E4232"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="#171560"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="#f2b55e"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="177dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Maths"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

        <TextView
            android:id="@+id/simplyTask"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/audiowide"
            android:text="Simply Task"
            android:textColor="#171560"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <TextView
            android:id="@+id/simplyTask2"
            android:layout_width="121dp"
            android:layout_height="69dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/audiowide"
            android:text="☆★☆"
            android:textColor="#171560"
            android:textSize="45"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <EditText
            android:id="@+id/name"
            android:layout_width="99dp"
            android:layout_height="52dp"
            android:layout_marginEnd="20dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Amy N"
            android:textColor="#171560"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            tools:layout_editor_absoluteY="111dp" />

        <TextView
            android:id="@+id/title5"
            android:layout_width="63dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:ems="12"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Hello!"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/simplyTask"
            tools:layout_editor_absoluteX="212dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintVertical_bias="0.9"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Assignments"
            android:textColor="#171560"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title2" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#120E4E"
            android:orientation="vertical"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:text="Task"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Due"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#171560"
                    android:checked="true"
                    android:fontFamily="@font/audiowide" />

                <EditText
                    android:id="@+id/editText10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Count Mr Allison's nose hairs"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="10/4/20"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#171560"
                    android:fontFamily="@font/audiowide" />

                <EditText
                    android:id="@+id/editText11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Calculate results"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="N/A"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:text="Homework"
            android:textColor="#171560"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
            tools:layout_editor_absoluteX="17dp" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="171dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#120E4E"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:text="Task"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Hard?"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Due"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#171560"
                    android:checked="true"
                    android:fontFamily="@font/audiowide" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Calculate results"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="10 April"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#171560"
                    android:checked="true"
                    android:fontFamily="@font/audiowide" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Research daily calories"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Monday"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9F9F9">

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#171560"
                    android:fontFamily="@font/audiowide" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:text="Find Easter eggs"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/audiowide"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>